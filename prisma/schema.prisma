generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PetType {
  DOG
  CAT
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())

  pet   Pets?   @relation(fields: [petId], references: [id]) // Um usu치rio tem um pet
  petId String? @unique // Um usu치rio s칩 pode ter um pet

  @@map("users")
}

model Pets {
  id         String   @id @default(uuid())
  name       String
  type       PetType
  image      String?
  created_at DateTime @default(now())

  user User? @relation() // Um pet pertence a um usu치rio

  @@map("pets")
}
